# Docker Compose environment example
FRONTEND_PORT=8088

# Backend auth
SECRET_KEY=change-me
JWT_EXPIRES_HOURS=24
LOCAL_AUTH_MOBILE=admin
LOCAL_AUTH_PASSWORD=pass123456
LOCAL_AUTH_PASSWORD_HASH=
LOCAL_AUTH_USER_ID=1
LOCAL_AUTH_IS_ADMIN=true

# Jupyter integration (token 可为空，空表示不启用 token 鉴权)
JUPYTER_TOKEN=
PUBLIC_BASE_URL=http://localhost:8088

# RQAlpha bundle auto update (monthly)
RQALPHA_BUNDLE_CRON="0 3 1 * *"
RQALPHA_BUNDLE_BOOTSTRAP=1

# Frontend build-time env (optional)
VUE_APP_API_BASE=
VUE_APP_API_SERVER=

# Database configuration
# DB_TYPE: sqlite (default) or mariadb
DB_TYPE=sqlite
# MariaDB connection (only used when DB_TYPE=mariadb)
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=backquant
DB_USER=backquant_user
DB_PASSWORD=backquant_pass
# MariaDB root password (for initial setup)
MYSQL_ROOT_PASSWORD=backquant_root_pass
MYSQL_DATABASE=backquant
MYSQL_USER=backquant_user
MYSQL_PASSWORD=backquant_pass
